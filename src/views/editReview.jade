extends layout
block content
  article.container
    h2.hvr-underline-from-right Edit Review
    div.row.editReview
      section.desktop-c-6.mobile-c-12
        h3 Spirited Away
        img(src="http://fontmeme.com/images/USA_full-spirited-away-poster.jpg")
      form.desktop-c-6.mobile-c-12(action="post")
        label(for="review") Review:
        textarea(name="review", id="review")
        label(for="summary") Summary:
        textarea(name="reviewSummary", id="summary")
        input(type="submit" value="Submit")