extends layout
block content
  section.container.reviews
    h2 Reviews
    div.row
      section.desktop-c-6.mobile-c-12
        each review in user.reviews
          a(href="movieInfo/"+review.title)
            img(src=review.poster)
          h3= review.title
          a(href="editReview/"+review.id) Edit Review
          p= review.reviewParagraph