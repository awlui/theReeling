extends layout

block content
  article.home
    .carousel
      -var count = 0;
      -var arr = ["one", "two", "three"];
      each movie, index in movies
        div
          .carouselUnit
            img(src=movie.lgPoster, data-poster=movie.poster, data-default=movie.lgPoster)
            a(href="#"+arr[count], class="overlay")
              div= movie.title
        - count++;
  section.banner
    h2  Sign Up!
  .wrapper
    article.container.jumbotron
      .row
        section.desktop-c-4.tablet-c-12
          h2 Review Your Favorite Movies!
          p.
            Or your least favorite movies... However, the goal of this site is to talk about your favorite movies. Don't kill your vibe.
        section.desktop-c-8.tablet-c-12
          article.signUp
            section.row
              h3 Write your review today!
            form(action="", class="row")
              section.desktop-c-6.tablet-c-12
                label(for="#firstname") First name
                input(id="firstname", type="text", name="firstname")
                label(for="#lastname") Last name
                input(id="lastname", type="text", name="lastname")
              section.desktop-c-6.tablet-c-12
                label(for="username") Username
                input(id="username", type="text", name="username")
                label(for="#password") Password
                input(id="password", type="password", name="password")
              span
                |  Or 
                a(href="#login") Log In
              input(type="submit", value="submit")
  section.banner
    h2 Search
  article.container
    div.row
      article.desktop-c-12.reviewSampler
        -var arr = ["one", "two", "three"];
        -var count = 0;
        each movie in movies
          section.desktop-c-6.tablet-c-6.mobile-c-12(id=arr[count])
            h2
              a(href="movieInfo/"+movie.title)= movie.title
            p= movie.reviewSummary
            span= "-" + movie.reviewer
          - count++;